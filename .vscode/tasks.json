{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/NugetRepack.Tool/NugetRepack.Tool.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "pack",
            "command": "./build",
            "type": "process",
            "args": [
                "pack"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}
